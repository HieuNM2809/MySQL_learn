('customer service', 56000),
('customer service', 55000);
 
------------------------GẮN AVG(salary) lên mỗi dòng---------------------------------------------------------------------------

SELECT emp_no, department, salary, AVG(salary) OVER() FROM employees;
 
SELECT 
    emp_no, 
    department, 
    salary, 
    MIN(salary) OVER(),
    MAX(salary) OVER()
FROM employees;

------------------------------TÍNH MIN MAX nhưng emp_no, department, salary lấy dòng đầu tiên --------------------------------------------------------------------
    
SELECT 
    emp_no, department, salary, MIN(salary), MAX(salary)
FROM
    employees;
 
---------------------------------------------------------------------------------------------------

SELECT emp_no,
       department,
       salary,
       Avg (salary)
         OVER (
           partition BY department) AS dept_avg
FROM   emps; 

===== Khác nhau giữa Window functions và GROUP BY ===== 
+ Window functions Tính trung bình  Avg (salary) của tất cả các dòng
+ GROUP BY tính của 1 dòng

